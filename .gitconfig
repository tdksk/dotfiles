[user]
  name  = Keisuke Tada
  email = tdkskdt@gmail.com
[color]
  ui = true
[push]
  default = current
[alias]
  ad = add
  co = checkout
  ci = commit
  st = status
  br = branch
  ba = branch -a
  di = diff
  d = diff --stat
  dc = diff --cached
  dw = diff --word-diff=color
  pr = pull --rebase
  sm = submodule
  smup = submodule update --init --recursive
  lg = log -p --stat
  tree = log --graph --pretty=oneline --abbrev-commit --decorate
[core]
  excludesfile = ~/.gitignore

[tig "bind"]
  # Disable default G mapping to git gc
  generic = G none
  # Keybinings like vim
  generic = g move-first-line
  generic = G move-last-line
  generic = u move-page-up
  generic = d move-page-down
  generic = ^b move-page-up
  generic = ^f move-page-down
[tig "color"]
  cursor = default black
  title-focus = white black
  title-blur = black white
